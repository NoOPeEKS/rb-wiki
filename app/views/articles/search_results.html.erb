<h1 class="text-2xl font-bold mb-4">Search Results for "<%= @query %>"</h1>

<% if @articles.any? %>
  <ul class="space-y-4">
    <% @articles.each do |article| %>
      <li class="border-b pb-4">
        <h2 class="text-xl font-semibold"><%= link_to article.title, article_path(article), class: "text-purple-600 hover:underline" %></h2>
        <p class="text-gray-600"><%= truncate(strip_tags(article.body.to_s), length: 150) %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-gray-600">No results found for "<%= @query %>"</p>
<% end %>

